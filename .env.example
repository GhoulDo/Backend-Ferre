# Base de datos PostgreSQL
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/ferreteria_db?sslmode=require"

# JWT Secret (genera uno único y seguro)
JWT_SECRET="tu_secreto_jwt_super_seguro_aqui_minimo_32_caracteres"

# Entorno de ejecución
NODE_ENV="development"

# Puerto del servidor (Render usa 10000 por defecto)
PORT=4000

# Configuraciones opcionales de rendimiento
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=10000
CACHE_TTL=300000

# Configuraciones de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# Configuraciones de logging
LOG_LEVEL="info"
LOG_TO_FILE=false
